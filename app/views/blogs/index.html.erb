<% provide :page_title, t('blogs.index.title') %>
<% currently_at t('menu.blogs')%>

<main class="my-5">
  <div class="container">
    <div class="text-center">
      <div class="mb-5 p-3">


        <% if current_user.try(:admin) %>

          <%= link_to image_tag("file-plus.svg", size: '44'),
                                 new_blog_path, class: 'text-decoration-none text-reset' %>
        <% end %>
      </div>

      <div class="row row-blog">

        <%= render 'blog' %>

      </div>
      <div class="p-1">

        <%= paginate @blogs %>

      </div>
      <div class="p-2"></div>
    </div>
  </div>
</main>
