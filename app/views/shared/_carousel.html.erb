<div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active" data-bs-interval="3000">
      <%= image_tag("slider.png", height: '400', width: '100%', class: "carousel-blur d-block w - 100", alt: 'slider') %>
      <div class="carousel-caption d-none d-md-block text-white">
        <h1 class="title">Автономные отопители</h1>
        <p class="body">Установка / Ремонт / Диагностика</p>
      </div>
    </div>
    <div class="carousel-item" data-bs-interval="3000">
      <%= image_tag("slider.png", height: '400', width: '100%', class: "carousel-blur d-block w - 100", alt: 'slider') %>
      <div class="carousel-caption d-none d-md-block text-white">
        <h1 class="title">Тахографы</h1>
        <p class="body">Установка / Ремонт / Калибровка</p>
      </div>
    </div>
    <div class="carousel-item" data-bs-interval="3000">
      <%= image_tag("slider.png", height: '400', width: '100%', class: "carousel-blur d-block w - 100", alt: 'slider') %>
      <div class="carousel-caption d-none d-md-block text-white">
        <h1 class="title">Автокондиционеры</h1>
        <p class="body">Диагностика / Ремонт / Заправка</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
