<% if notice || alert %>
  <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
  <% end %>
<% else %>
  <% flash.each do |k, v| %>
  <%= tag.div v, class: "alert alert-#{k}", role: 'alert' %>
  <% end %>
<% end %>