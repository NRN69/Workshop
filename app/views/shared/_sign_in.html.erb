<div class="modal hide fade" id="sign_in" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content text-dark">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div id="flash">
            <%= render 'shared/flash' %>
          </div>
          <div class="row justify-content-center">
            <div class="col-md-6">
              <div class="title"><strong>
                <%= image_tag('person-profile.svg', class: 'image') %>
              </strong></div>

              <%= form_for(User.new,
                                        url: session_path(:user),
                                        html: { id: 'sign_in_user',
                                                data: { type: :json }},
                                        remote: true) do |f| %>

                <div class="form-group my-4">
                  <%= f.email_field    :email,
                                        autofocus: true,
                                        autocomplete: 'off',
                                        class: 'field',
                                        placeholder: 'Email' %>
                </div>

                <div class="form-group my-1">
                  <%= f.password_field  :password,
                                        autocomplete: 'off',
                                        class: 'field',
                                        placeholder: t('devise.autocomplete.password') %>
                </div>
                <div class="forgot">
                  <%= link_to t('devise.link.forgot_password'), new_user_password_path,
                                        class: 'forgot' %>
                </div>

                <div class="actions">
                  <%= f.submit t('devise.sessions.new.button'),
                                        class: 'btn btn-dark bt-sm' %>
                </div>

                <div class="sign_up">
                 only administration
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>